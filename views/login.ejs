<% include model/header %>
<!--<script src='https://www.google.com/recaptcha/api.js'></script>-->
<div>
    <h3 style="text-align: center">Login</h3>

    <% if(error && error.length > 0) { %>
        <p><%= error[0] %></p>
    <% } %>

    <form action="/login" method="post">
        <div>
            <label>Account (username, email or phone):</label>
            </br>
            <input type="text" name="account"/>
        </div>
        <div>
            <label>Password:</label>
            </br>
            <input type="password" name="password"/>
        </div>
        <!--<div class="form-group g-recaptcha" data-sitekey="6LdCNGkUAAAAAFSUV8w9_bldARR_nLBlw1yGtHIQ" data-callback="enableRegisterButton" data-expired-callback="recaptchaExpired" data-error-callback="recaptchaExpired"></div>-->
        <div>
            <input type="submit" value="Login"/>
        </div>
    </form>

    </br>
    <a href="/auth/facebook">Login With Facebook</a>

</div>
<% include model/footer %>